<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/header.ejs') %>
    <a href="/new">Got something to say? click here!</a>
    <main>
      <% messages.forEach((message) => { %>

      <div>
        <h2><%= message.title %></h2>
        <p><%= message.text %></p>
        <hr />
        <div>
          <p><%= message.user %></p>
          <p><%= message.added %></p>
        </div>
      </div>

      <% }) %>
    </main>
  </body>
</html>
